FROM python:3.9-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY app/ ./app/
COPY models/ ./models/
COPY scripts/ ./scripts/
COPY data/ ./data/

# Initialize DB during build or startup? Better at startup via script, but for simplicity we'll copy if exists
# For this prototype, we will run the init script in the CMD or manually

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
